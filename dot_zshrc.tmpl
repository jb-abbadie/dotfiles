# Enable Powerlevel11k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Auto CD
setopt auto_cd

# history
export HISTSIZE=100000
export SAVEHIST=100000
export HISTFILE=${HOME}/.zsh_history
setopt append_history
setopt hist_ignore_all_dups
setopt hist_ignore_space
setopt share_history

# Sourcing
source ~/.zsh_alias
source ~/.zsh_functions
source ~/.zsh_completions
source ~/.zsh_bindkeys
{{- if eq .chezmoi.hostname "work-laptop-jb" }}
source ~/.zsh_functions_private
{{- end }}

# FZF
source /usr/share/fzf/key-bindings.zsh
source /usr/share/fzf/completion.zsh
export FZF_TMUX=0
export FZF_ALT_C_COMMAND='fd --type d --max-depth 3'
export FZF_CTRL_T_COMMAND='fd'
bindkey '^S' fzf-cd-widget
setopt noflowcontrol

# Keychain
eval `keychain --agents ssh --systemd --eval --quiet`

# Antidote
[[ -e ~/.antidote ]] || git clone https://github.com/mattmc3/antidote.git ~/.antidote

# source antidote
. ~/.antidote/antidote.zsh

# generate and source plugins from ~/.zsh_plugins.txt
antidote load

# Pyenv
source /usr/share/zsh/site-functions/_pyenv
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# Completion
fpath=( ~/.zfunc "${fpath[@]}" )
autoload -U compinit; compinit

{{- if index . "reviewers" }}
alias gpr="hub pull-request -r {{ .reviewers }}"
{{ end }}

{{- if eq .chezmoi.hostname "work-laptop-jb" }}
autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C ${HOME}/.terraform.versions/terraform_1.1.9 terraform
complete -o nospace -C ${HOME}/.terraform.versions/terraform_1.1.9 terraform_1.1.9
{{ end }}
# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
