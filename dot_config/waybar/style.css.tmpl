* {
	font-size: {{ if hasKey . "hidpi" }}20{{else}}14{{end}}px;
	font-family: UbuntuMono Nerd Font;
}

window#waybar {
	background: #292b2e;
	color: #fdf6e3;
}

#custom-right-arrow-dark,
#custom-left-arrow-dark {
	color: #1a1a1a;
}
#custom-right-arrow-light,
#custom-left-arrow-light {
	color: #292b2e;
	background: #1a1a1a;
}

#workspaces,
#pulseaudio,
#memory,
#cpu,
#battery,
#disk,
#mpris,
#tray {
	background: #1a1a1a;
}

#workspaces button {
	padding: 0 2px;
	color: #fdf6e3;
}
#workspaces button.focused {
	color: #268bd2;
}
#workspaces button:hover {
	box-shadow: inherit;
	text-shadow: inherit;
}
#workspaces button:hover {
	background: #1a1a1a;
	border: #1a1a1a;
	padding: 0 3px;
}

#pulseaudio {
	color: #268bd2;
}
#cpu {
	color: #6c71c4;
}
#battery {
	color: #859900;
}
#disk {
	color: #b58900;
}
#network{
	color: #2aa198;
	background: #1a1a1a;
	padding: 0 10px;
}
#clock{
	background: #1a1a1a;
	padding: 0 10px;
}
#pulseaudio,
#memory,
#cpu,
#battery,
#disk {
	padding: 0 10px;
}
